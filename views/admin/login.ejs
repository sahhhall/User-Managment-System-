<%- include('../layouts/header.ejs') -%>




<div class="text-center center-div mt-5" id="login" >
    <div class="container w-25 border border-dark py-5" style="border-radius: 40px; ">
        <div class="title pt-3">
            <h2 class="font-weight-bold">Admin login</h2>
            <span >Log in for the admins</span>
            <% if(locals.messagenotadmin){%>
                    <div class="alert alert-danger text-center" > <%= messagenotadmin %></div>
                   
                <%}%>
                <% if(locals.log){%>
                    <div class="alert alert-success text-center" > <%= log %></div>
                   
                <%}%>
                <% if (locals.messagee) { %>
                    <div class="alert alert-danger d-flex align-items-center  " role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2 " viewBox="0 0 16 16" role="img" aria-label="Warning:">
                          <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                        </svg>
                        <div >
                            <strong>Hey !</strong>
                          <%= messagee %>
                        </div>
                      </div>
                      
                    
                <% } %>
        </div>
        <form action="/admin/" method="post" class="mt-3">
            <div class="form-group">
                <input type="text" class="form-control" name="email" placeholder="Enter email" required>
               
            </div>
            <div class="form-group pb-3">
                <input type="password" class="form-control" name="password" placeholder="Enter password"  required>
                
            </div>
            <button  type="submit" class="btn btn-dark rounded-pill" id="loggo" value="login">Submit</button>
            
        </form>
    </div>
    <p class="small  mt-2 pt-1 mb-0">Don't have an account? <a href="/register"
        class="l">Register</a></p>
</div>

<%- include('../layouts/footer.ejs') -%>